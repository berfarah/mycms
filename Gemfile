source 'https://rubygems.org'

### DEFAULTS
gem 'rake', '10.3.2'
gem 'rails', '4.1.0'
gem 'sqlite3' # Active Database
gem 'sass-rails', '~> 4.0.3' # SCSS compiler
gem 'uglifier', '>= 1.3.0' # Javascript compressor
gem 'coffee-rails', '~> 4.0.0' # Coffee JS Compiler
gem 'jquery-rails' # jQuery
gem 'turbolinks' # Kind of AJAX – https://github.com/rails/turbolinks
gem 'jbuilder', '~> 2.0' # JSON builder – https://github.com/rails/jbuilder
gem 'sdoc', '~> 0.4.0',          group: :doc # bundle exec rake doc:rails generates the API under doc/api.
gem 'spring',        group: :development # Server
gem 'execjs' # Add js runtime
gem 'therubyracer'

### APPLICATION
# JS & CSS
gem 'bootstrap-sass' # Bootstrap it for now
gem 'momentjs-rails', '~> 2.5.0' # Required for datetimepicker
gem 'bootstrap3-datetimepicker-rails', '~> 3.0.0' # Make it easier for the user to submit publish date

# User Auth
gem 'devise' # Framework for users
gem 'bcrypt', '~> 3.1.7' # Use ActiveModel has_secure_password

# Post Content
gem 'carrierwave' # Image upload and storage
gem 'mini_magick' # Image manipulation
gem 'bootsy' # WYSIWYG Editor with Carrierwave support

gem 'nested_form' # Better support for nested forms
gem 'select2-rails' # Tagging autocomplete

