<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Date</th>
      <th>Title</th>
      <th>Summary</th>
      <th>Content</th>
      <th>Slug</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.user_id %></td>
        <td><%= post.published_at %></td>
        <td><%= post.title %></td>
        <td><%= post.summary %></td>
        <td><%= post.content %></td>
        <td><%= post.slug %></td>
        <td><%= post.type %></td>
        <td><%= link_to 'Show', sti_post_path(post.type, post) %></td>
        <td><%= link_to 'Edit', sti_post_path(post.type, post, :edit) %></td>
        <td><%= link_to 'Destroy', sti_post_path(post.type, post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Post', sti_post_path(@type, nil, :new) %>
<% end %>