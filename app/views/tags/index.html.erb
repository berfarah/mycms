<h1>Listing tags</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Slug</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.name %></td>
        <td><%= tag.description %></td>
        <td><%= tag.slug %></td>
        <td><%= link_to 'Show', tag_path(tag.id) %></td>
        <td><%= link_to 'Edit', edit_tag_path(tag.id) %></td>
        <td><%= link_to 'Destroy', tag_path(tag.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New tag', new_tag_path %>
<% end %>