<div class="panel panel-default">
	<div class="panel-heading">
		<h2 class="panel-title">Resend confirmation instructions</h2>
	</div>

	<div class="panel-body">
		<%= form_for(resource, as: resource_name, url: confirmation_path, html: { method: :post }) do |f| %>
			<%= devise_error_messages! %>

			<div class="form-group">
				<%= f.label :email, class: "input-control" %><br />
				<%= f.email_field :email, autofocus: true %>
			</div>

			<div class="form-group">
				<%= f.submit "Resend confirmation instructions" %>
			</div>
		<% end %>
	</div>

	<div class="panel-footer">
		<%= render "confirmable/shared/links" %>
	</div>
</div>